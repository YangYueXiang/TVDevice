<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PicturesActivity">
    <com.boe.tvdevice.customView.MyBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_headers"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_86"
            android:background="#41000000"
            >
            <ImageView
                android:id="@+id/fanhuis"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@drawable/picturesback"
                />
            <TextView
                android:id="@+id/tv_titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_23"
                android:text="想想"
                android:textColor="#fff"
                android:textSize="@dimen/sp_18"
                />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_buuton"
        android:visibility="gone"
        android:background="#41000000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/img_auto"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/autocopy"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_17"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                >
                <ImageView
                    android:id="@+id/img_shangyige"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/xiayishoucopy"
                    />
                <ImageView
                    android:id="@+id/img_chongbo"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/zhongbo"
                    android:layout_marginLeft="@dimen/dp_51"
                    android:layout_marginRight="@dimen/dp_51"
                    />
                <ImageView
                    android:id="@+id/img_xiayige"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/xiayishou"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>