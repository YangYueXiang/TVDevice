<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_143"
        android:layout_height="@dimen/dp_119"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_video_picture"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_116"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/icon_video" />

        <LinearLayout
            android:id="@+id/ll_videoplay_or_delete"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="#8D050505"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/iv_videoplay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/icon_play" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iv_videodelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:src="@drawable/icon_delete" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="one"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_8" />
</LinearLayout>